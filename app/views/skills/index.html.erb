 <% title("Skills")  %>

<div id="skills">

  <div class="jumbotron">

     <%= background_image("skills") %>
    <div class="container">
      <section class="page mb-3">
         <h1>Skills</h1>
      </section>
    </div>
  </div>

  <div class="container">
    <section>
      <div class="row mt-3 skills-container">

        <% @group.each do |types, values| %>
          <div class="col-6 col-sm-6 col-md-2 col-lg-2 col-xl-2 ">

            <div class="panel">
              <div class="panel-heading justify-content-center d-flex">


              </div>

              <div class="panel-body ">
                <div class="">


                  <% values.each do |val| %>

                  <div class="container mb-4 col-12 ">
                    <div class="row ">

                      <%= image_tag("#{Settings.live_site_path}/image/skills/#{val[:image]}", alt:val[:name], class: "img-fluid mr-auto ml-auto")  %>

                    </div>

                    <div class="row justify-content-center">
                      <%= val[:name] %>
                    </div>

                  </div>
                  <% end  %>

                </div>
              </div>

            </div>

          </div>
        <% end %>


      </div>
    </section>
  </div>
</div>



